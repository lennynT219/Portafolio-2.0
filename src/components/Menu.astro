---
import Idashboard from '../assets/icon/Idashboard.astro'
import Ibox from '../assets/icon/Ibox.astro'
import Imessage from '../assets/icon/Imessage.astro'
import Isun from '../assets/icon/Isun.astro'
import Iuser from '../assets/icon/Iuser.astro'
import Igithub from '../assets/icon/Igithub.astro'
import Ilinkedin from '../assets/icon/Ilinkedin.astro'
---

<div class='menu'>
  <a href='/' aria-label='Inicio' data-astro-reload>
    <Idashboard />
    <span>Inicio</span>
  </a>
  <a href='/personal' aria-label='Personal'>
    <Iuser />
    <span>Personal</span>
  </a>
  <a href='/proyectos' aria-label='Proyectos'>
    <Ibox />
    <span>Proyectos</span>
  </a>
  <div class='divicion'></div>
  <a href='https://github.com/lennynT219' aria-label='Github'>
    <Igithub />
    <span>Github</span>
  </a>
  <a href='https://www.linkedin.com/in/lenin-masapanta' aria-label='Linkedin'>
    <Ilinkedin />
    <span>Linkedin</span>
  </a>
  <a href='mailto:lennynvega35@gmail.com' aria-label='Correo'>
    <Imessage />
    <span>Correo</span>
  </a>
  <div class='divicion'></div>
  <a href='#' aria-label='Tema'>
    <Isun />
    <span>Tema</span>
  </a>
</div>

<style is:global>
  .menu {
    display: flex;
    align-items: center;
    position: fixed;
    background-color: var(--white);
    width: auto;
    height: 58px;
    left: 50%;
    bottom: -10px;
    border-radius: 50px;
    transform: translate(-50%, -50%);
    box-shadow: 0 30px 60px rgba(0, 0, 0, 0.12);
    border: 1px solid hsl(0 0% 0% / 0.071);
    gap: 8px;
    padding-left: 8px;
    padding-right: 8px;
    z-index: 10;
  }

  .menu a {
    position: relative;
    display: inline-block;
    transition: transform 0.2s ease-in-out;
  }

  .menu a:hover {
    transform: translateY(-15px);
    svg {
      font-size: 40px;
      height: 70px;
      width: 70px;
    }
  }

  .menu a:hover span {
    opacity: 1;
  }

  .menu a svg {
    font-size: 20px;
    height: 44px;
    width: 44px;
    color: var(--dark-gray);
    background-color: var(--light-gray);
    padding: 12px;
    border-radius: 100%;
    transition:
      width 0.1s ease-in-out,
      height 0.1s ease-in-out,
      transform 0.1s ease-in-out;
  }

  .menu a span {
    position: absolute;
    font-family: 'JetBrains Mono', monospace;
    left: 50%;
    transform: translate(-50%, -50%);
    top: -20px;
    font-size: 13px;
    color: var(--dark-gray);
    background-color: var(--white);
    border: 1px solid var(--light-gray);
    border-radius: 7px;
    padding: 3px 5px;
    box-shadow: 0 30px 60px rgba(0, 0, 0, 0.12);
    opacity: 0;
    transition: opacity 0.3s ease-in-out;
  }

  .divicion {
    width: 1px;
    height: 30px;
    background-image: linear-gradient(to bottom, #b9b5b536, #615f5f52, #615f5f52, #b9b5b536);
  }
</style>
