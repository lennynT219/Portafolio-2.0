---
const { letter, className, height, width, viewBox, translate } = Astro.props
---

<svg
  class={`letras ${className}`}
  height={height}
  width={width}
  viewBox={viewBox}
>
  <path transform=`scale(1,-1) translate(${translate})` d={letter}></path>
</svg>

<style is:global>
  .letras {
    position: absolute;
    z-index: 2;
    pointer-events: none;
    animation: fade-in-bck 0.6s cubic-bezier(0.39, 0.575, 0.565, 1) var(--delay)
      both;
  }
  .letra-L {
    grid-area: 12/8 / span 1;
    --delay: 0.6s;
  }

  .letra-E {
    grid-area: 13/10 / span 1;
    --delay: 0.7s;
  }

  .letra-N {
    grid-area: 12/12 / span 1;
    --delay: 0.8s;
  }

  .letra-N2 {
    grid-area: 13/14 / span 1;
    margin-left: 25px;
    --delay: 0.9s;
  }

  .letra-Y {
    grid-area: 12/16 / span 1;
    margin-left: 10px;
    --delay: 1s;
  }

  .letra-N3 {
    grid-area: 13/18 / span 1;
    margin-left: 10px;
    --delay: 1.1s;
  }
</style>
