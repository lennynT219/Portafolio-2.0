---
import HomeGrid from '../components/HomeGrid.astro'
import Layout from '../layouts/Layout.astro'
import Letters from '../components/Letters.astro'
import { letters } from '../assets/icon/letters'
---

<Layout title='Software Developer 👨🏽‍💻'>
  <div class='index-container'>
    {letters.map(props => <Letters {...props} />)}
    <HomeGrid />
  </div>
  <div class='hora'></div>
  <div class='size'></div>
  <div class='ubicacion'></div>
</Layout>

<script src='../assets/ts/index.ts'></script>
<style is:global>
  .index-container {
    display: grid;
    cursor: grab;
    grid-template-columns: repeat(26, 1fr);
    grid-template-rows: repeat(26, 1fr);
    transform: translate(calc(-50% + var(--x)), calc(-50% + var(--y))) skewX(-48deg) skewY(14deg)
      scaleX(2.9) scaleY(1.3);
    --rotate: 0deg;
    --x: 0px;
    --y: 0px;
    transition: transform 0.5s ease-out;
    position: fixed;
    top: 50%;
    left: 50%;
  }

  .hora,
  .size,
  .ubicacion {
    font-family: 'JetBrains Mono', monospace;
    position: fixed;
    color: #7e7c7cd7;
    font-size: 13px;
    z-index: 100;
  }

  .hora {
    top: 20px;
    left: 20px;
  }

  .size {
    top: 20px;
    right: 20px;
  }

  .ubicacion {
    bottom: 20px;
    left: 20px;
  }
</style>
