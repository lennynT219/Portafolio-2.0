---
import HomeGrid from '../components/HomeGrid.astro'
import Layout from '../layouts/Layout.astro'
import Letters from '../components/Letters.astro'
import { letters } from '../assets/icon/letters'
---

<Layout title="Lenin Masapanta - Software Developer ðŸ‘¨ðŸ½â€ðŸ’»">
  <div class="main-container">
    <HomeGrid />
    {letters.map(props => <Letters {...props} />)}
  </div>
</Layout>

<script src="../assets/js/index.js"></script>
<style is:global>
  .main-container {
    display: grid;
    cursor: grab;
    grid-template-columns: repeat(30, 1fr);
    grid-template-rows: repeat(30, 1fr);
    transform: translate(calc(-50% + var(--x)), calc(-50% + var(--y)))
      skewX(-48deg) skewY(14deg) scaleX(2) scale(0.7) rotate(var(--rotate))
      translateZ(0);
    --rotate: 0deg;
    --x: 0px;
    --y: 0px;
    transition: transform 0.5s ease-out;
    position: fixed;
    top: 50%;
    left: 50%;
  }
</style>
